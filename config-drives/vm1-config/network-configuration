#cloud-config
#!bin/bash

sysctl -w net.ipv4.ip_forward=1
iptables -t nat -A POSTROUTING -o enp0s3 -j MASQUERADE
iptables -A FORWARD -i enp0s3 -o enp0s4 -m state --state RELATED,ESTABLISHED -j ACCEPT
iptables -A FORWARD -i enp0s4 -o enp0s3 -j ACCEPT

ip link add vxlan0 type vxlan id 1234 remote 10.255.0.2 lockal 10.255.0.1 dstport 4789
ip link set vxlan0 up
ip addr add 192.168.124.101/24 dev vxlan0
